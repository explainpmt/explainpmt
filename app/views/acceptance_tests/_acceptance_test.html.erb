<tr>
	<td class="checkers">
		<%= column_content_for(hide_cols, :checkbox) do %>
			<%= check_box_tag 'selected_acceptance_tests[]', acceptance_test.id, false, :id => dom_id(acceptance_test) %>
		<% end %>
	</td>
	<td class="align_left">
		<%= link_to_acceptance_test(acceptance_test) %>
		<%= image_tag( 'info-icon.gif', :alt => acceptance_test.description ) if acceptance_test.description? %>
	</td>
	<%= column_content_for(hide_cols, :story) do %>
		<td class="align_left center"><%= acceptance_test.story_id? ? link_to_story_with_sc(acceptance_test.story) : "Not Assigned" %></td>
	<% end %>

	<%= column_content_for(hide_cols, :iteration) do %>
		<td class="align_left center"><%= acceptance_test.story_id? && acceptance_test.story.iteration_id? ? link_to_iteration(acceptance_test.story.iteration) : "Not Assigned" %></td>
	<% end %>

	<td class="align_left center"><%= acceptance_test.automated? ? "Yes" : "No" %></td>
	<td class="align_left center"><%= acceptance_test.pass? ? "Yes" : "No" %></td>

	<%= column_content_for(hide_cols,:action) do %>
	<td class="align_left center tools">
		<%= link_to_edit_acceptance_test(acceptance_test) %>
		<%= link_to_delete_acceptance_test(acceptance_test) %>
		<%= link_to_clone_acceptance_test(acceptance_test) %>
	</td>
	<% end %>
</tr>