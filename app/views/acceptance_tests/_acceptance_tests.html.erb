<% hide_cols ||= [] %>
<table class="sorting" id="acceptance-table">
	<thead>
		<tr>
			<th class="checkers"><input type="checkbox" class="checkall" /></th>
			<th class="align_left">Test Name</th>
			<%= column_content_for(hide_cols, :story) do %><th class="align_left center">Story</th><% end %>
			<%= column_content_for(hide_cols, :iteration) do %><th class="align_left center">Iteration</th><% end %>
			<th class="align_left center">Automated</th>
			<th class="align_left center">Pass</th>
			<%= column_content_for(hide_cols, :action) do %><th class="align_left center tools">Action</th><% end %>
		</tr>
	</thead>
	<tbody>
		<%= render :partial => @acceptance_tests, :locals => { :hide_cols => hide_cols } %>
	</tbody>
</table>