<% if @changes.present? %>
	<table class="sort-table" width="100%" id="story_audit" cellspacing="0" cellpadding="0" border="0">
		<thead>
			<tr>
				<td>Time</td>
				<td>Before</td>
				<td>After</td>
				<td>User</td>
			</tr>
		</thead>
		<tbody>
		<% @changes.each do |change| %>
			<tr class="<%= cycle("even_row", "odd_row") %>">
				<td><%= change.created_at %></td>
				<td><%#= text_area_tag "body", change.before, :size => "30x3", :readonly => "true", :style => "background:#E6E6E6" %></td>
				<td><%#= text_area_tag "body", change.after, :size => "30x3", :readonly => "true", :style => "background:#E6E6E6" %></td>
				<td><%= change.user.full_name %></td>
			</tr>
		<% end %>
		</tbody>
	</table>
<% else %>
	<p>No Changes have been recorded for this story</p>
<% end %>