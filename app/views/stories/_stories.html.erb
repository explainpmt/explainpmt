<% hide_cols ||= [] %>
<table class="sorting" id="backlog_stories">
	<thead>
		<tr>
			<th class="checkers"><input type="checkbox" class="checkall" /></th>
			<th class="align_left">SCID</th>
			<%= column_content_for(hide_cols, :project) do %><th class="align_left center">Project</th><% end %>
			<th class="align_left center">Title</th>
			<th class="align_left center">Initiative</th>
			<%= column_content_for(hide_cols, :release) do %><th class="align_left center">Release</th><% end %>
			<th class="align_left center">Points</th>
			<th class="align_left center">Value</th>
			<th class="align_left center">Risk</th>
			<th class="align_left center">Status</th>
			<%= column_content_for(hide_cols, :owner) do %><th class="align_left center">Owner</th><% end %>
			<%= column_content_for(hide_cols, :iteration) do %><th class="align_left center">Iteration</th><% end %>
			<th class="align_left center">Customer</th>
			<th class="align_left center">#</th>
			<%= column_content_for(hide_cols, :action) do %><th class="align_left center tools">Action</th><% end %>
		</tr>
	</thead>
	<tbody>
		<%= render :partial => @stories, :locals => { :hide_cols => hide_cols } %>
	</tbody>
</table>
<div class="table_actions">
	<input type="checkbox" class="checkall" />
	
	<select>
		<option>Choose action</option>
		<option>Delete</option>
	</select>
	
	<button class="left">Apply to Selected</button>
</div>