<tr>
	<td class="align_left"><%= task.name %></td>
	<%= column_content_for(hide_cols, :project) do %>
	<td class="align_left center"><%= link_to(task.story.project.name, project_dashboard_path(task.story.project)) %></td>
	<% end %>

	<%= column_content_for(hide_cols, :iteration) do %>
	<td class="align_left center"><%= task.story.iteration_id ? link_to_iteration(task.story.iteration) : "Not Assigned" %></td>
	<% end %>

	<%= column_content_for(hide_cols, :story) do %>
	<td class="align_left center"><%= link_to_story_with_sc(task.story) %></td>
	<td class="align_left center"><%= link_to_story(task.story) %></td>
	<% end %>

	<td class="align_left center"><%= task.complete == true ? 'Yes' : 'No' %></td>

	<%= column_content_for(hide_cols, :owner) do %>
	<td class="align_left center">
	<% if task.owner %>
		<%= task.owner.full_name %>
		<%= "(#{link_to_release_task_ownership(task)})" %>
	<% else %>
		<%='None (' + link_to_take_task_ownership(task) + '/' + link_to_assign_task_ownership(task) + ')'%>
	<% end %>
	</td>
	<% end %>

	<%= column_content_for(hide_cols, :action) do %>
	<td class="align_left center tools">
		<%= link_to_edit_task(task, :text => "Edit") %>
		<%= link_to_delete_task(task) %>
	</td>
	<% end %>
</tr>